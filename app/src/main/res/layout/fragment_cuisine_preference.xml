<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_cuisine_preferences"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_regular">

    <ImageButton
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:background="@drawable/angle_circle_left"
        android:id="@+id/back_button_cuisine_preferences"
        android:contentDescription="TODO">
    </ImageButton>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="30dp"
        android:fontFamily="cursive"
        android:lines="3"
        android:text="@string/what_cuisine_do_you_feel_like_eating_today"
        android:textSize="30sp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioButton_cuisine_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75sp"
            android:layout_marginTop="10sp"
            android:text="@string/indian_cuisine"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButton_cuisine_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75sp"
            android:layout_marginTop="10sp"
            android:text="@string/mexican"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButton_cuisine_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75sp"
            android:layout_marginTop="10sp"
            android:text="@string/chinese"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButton_cuisine_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75sp"
            android:layout_marginTop="10sp"
            android:text="@string/thai"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButton_cuisine_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75sp"
            android:layout_marginTop="10sp"
            android:text="@string/korean"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButton_cuisine_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75sp"
            android:layout_marginTop="10sp"
            android:text="@string/surprise_me_with_anything"
            android:textStyle="bold" />
    </RadioGroup>


    <Button
        android:id="@+id/Button_next_cuisine_preferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300sp"
        android:layout_marginTop="80sp"
        android:text="@string/next"
        android:textStyle="bold"
        android:background="@drawable/button_resource"/>

</LinearLayout>
