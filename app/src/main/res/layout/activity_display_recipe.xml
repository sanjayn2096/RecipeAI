<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipe_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="600sp"
        android:layout_marginTop="40sp"
        android:scrollbars="vertical"
        android:visibility="gone"
        tools:layout_editor_absoluteX="0sp"
        tools:layout_editor_absoluteY="-300sp"
        tools:listitem="@layout/recipe_list_item">
    </androidx.recyclerview.widget.RecyclerView>

    <!-- Lottie Animation for loading -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading_animation"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_centerInParent="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/cooking_animation"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textViewLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="74sp"
        android:layout_marginTop="520sp"
        android:layout_marginEnd="72sp"
        android:lines="3"
        android:text="@string/sending_some_tasty_recipes_your_way"
        android:textSize="15sp"
        android:textStyle="bold" />

    <!-- Fragment Container -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/recipe_recycler_view"
        android:layout_marginTop="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/refresh_recipes_button"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginStart="60sp"
            android:layout_marginTop="700sp"
            android:background="@drawable/refresh"
            android:text="@string/refresh" />

        <ImageButton
            android:id="@+id/edit_preferences_button"
            android:layout_width="33sp"
            android:layout_height="33sp"
            android:layout_marginStart="250sp"
            android:layout_marginTop="700sp"
            android:background="@drawable/floppy_disk_pen_12400816"
            android:backgroundTint="@color/custom_green"
            android:text="@string/edit_preferences" />
    </LinearLayout>

</RelativeLayout>